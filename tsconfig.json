{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"target": "es6",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"lib": [
			"es6",
			"es2017",
			"dom"
		],
		"outDir": "./dist",
	    "baseUrl": "./",
		"paths": {
			"@app/*": ["./src/app/*"],
			"@part/*": ["./src/part/*"],
			"@util/*": ["./src/util/*"],
			"@page/*": ["./src/app/page/*"]
		}
	},
	"include": [
		"./index.ts"
	]
}